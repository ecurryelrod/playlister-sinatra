<h2>Edit Song</h2>
<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <h3>Song Name: <input type="text" name="song[name]" id="name" value="<%= @song.name %>"></h3>
    <br>
    <h3>Select a different genre or add a genre:</h3>
    <% Genre.all.each do |genre| %>
        <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>>
        <%= genre.name %>
        <br>
    <% end %>
    <h3>Update the Artist:</h3>
    <h3>Artist Name: <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"></h3>
    
    <button type="submit">Save</button>
</form>

